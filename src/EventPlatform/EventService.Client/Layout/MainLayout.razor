@using EventService.Client.Handlers
@using EventService.Client.Services.Contracts

@inherits LayoutComponentBase

@inject IMessageService _messageService
@inject HttpStatusCodeHandler _inteceptor

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <p class="my-custom-class">Whoa, sorry about that! Something went wrong! Here is the Error Message: @ex</p>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>

<Toasts class="p-3" Delay=5000 Placement="ToastsPlacement.BottomRight" />

@code {
    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _inteceptor.RegisterEvent();
    }

    public void Dispose() => _inteceptor.DisposeEvent();
}